#!/usr/bin/env bash

docker run -it \
    -v ~/.gitconfig:/root/.gitconfig \
    -v ~/.ssh/id_rsa:/root/.ssh/id_rsa \
    -v ~/.ssh/id_rsa.pub:/root/.ssh/id_rsa.pub \
    -v ~/.gush:/root/.gush \
    -v "$(pwd)":/root/project \
    -e GUSH_CONFIG=/root/.gush \
    -e GUSH_LOCAL_CONFIG=/root/project \
    coder20078/gush "$@"
